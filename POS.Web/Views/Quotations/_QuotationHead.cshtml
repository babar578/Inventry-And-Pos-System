@using POS.Utilities.Services
@using POS.Utilities.ViewModel
@model QuotationheadViewModel

@{

    Layout = null;
    Model.Vendors = VendorServices.GetAllCustomers();
    Model.RawItems = ItemServices.GetAllItems(true);

}

@using (Html.BeginForm("", "", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class=" row">
        <div class=" col-md-12">
            <div class="card card-custom accent-dark">
                <div class="card-header card-blue">
                    <div class="card-title">
                        <span class="card-icon">
                            <i class="flaticon2-line-chart text-primary"></i>
                        </span>
                        <h3 class="card-label">
                            Quotation 
                            
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label class="col-form-label">Quotation Date <b class="text-danger">*</b></label>
                @Html.TextBoxFor(m => m.QuotationDate, new { @type = "date", @class = "form-control", placeholder = "Quotation Date* ", @required = "true" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="col-form-label">Date of Supply<b class="text-danger">*</b></label>
                @Html.TextBoxFor(m => m.DateOFSupplyDate, new { @type = "date", @class = "form-control", placeholder = "Date of Supply* ", @required = "true" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label class="col-form-label">Payment Date <b class="text-danger">*</b></label>
                @Html.TextBoxFor(m => m.PaymentDate, new { @type = "date", @class = "form-control", placeholder = "Payment Date* ", @required = "true" })
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label class="col-form-label">Voild Upto Date  <b class="text-danger">*</b></label>
                @Html.TextBoxFor(m => m.VoildUptoDate, new { @type = "date", @class = "form-control", placeholder = "Voild Upto Date * ", @required = "true" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="col-form-label">PO No</label>
                @Html.TextBoxFor(m => m.Pono, new { @class = "form-control", placeholder = "PO No ", @required = "true" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group ">
                <label class="col-form-label">Vendor Name <b class="text-danger">*</b></label>
                @Html.DropDownListFor(m => m.VendorId, new SelectList(Model.Vendors, "Id", "CustomerName"), new { @class = "form-control selectpicker", data_live_search = "true", data_hide_disabled = "true", title = "Vendor", @required = "true" })
            </div>
        </div>

        @*<div class="col-md-3">
            <div class="form-group ">
                <label class="col-form-label">Warehouse<b class="text-danger">*</b></label>
                @Html.DropDownListFor(m => m.WarehousesID, new SelectList(Model.warehouses, "Id", "Name"), new { @class = "form-control selectpicker", data_live_search = "true", data_hide_disabled = "true", title = "Warehouse", @required = "true" })
            </div>
        </div>*@

        @*<div class="col-md-3">
            <div class="form-group ">
                <label class="col-form-label">Received From <b class="text-danger">*</b></label>
                @Html.DropDownListFor(m => m.ReceivedID, new SelectList(Model.receivedFroms, "Id", "Name"), new { @class = "form-control selectpicker", data_live_search = "true", data_hide_disabled = "true", title = "Received From", @required = "true" })
            </div>
        </div>*@

        @*<div class="col-md-3">
            <div class="form-group">
                <label class="col-form-label">Vehicle No</label>
                @Html.TextBoxFor(m => m.VehicleNo, new { @class = "form-control", placeholder = "Vehicle No ", @required = "true" })
            </div>
        </div>*@
        <div class="col-md-8">
            <div class="form-group">
                @Html.TextBoxFor(m => m.Remarks, new { @class = "form-control", placeholder = "Remarks", @required = "true" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <div class="input-group">
                    @Html.DropDownListFor(m => m.ItemId, new SelectList(Model.RawItems, "Id", "Name"), new { @class = "form-control selectpicker", data_live_search = "true", data_hide_disabled = "true", title = "Import Raw Items", @required = "true" })
                    <span class="input-group-append">
                        <button type="button" id="btnImport" class="btn btn-info btn-flat">Import Item</button>
                    </span>
                </div>


            </div>



        </div>

    </div>
}

<script>
    $(document).ready(function () {
        $('select').selectpicker();
    });


    $(function () {
        debugger
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd
        }
        if (mm < 10) {
            mm = '0' + mm
        }

        today = yyyy + '-' + mm + '-' + dd;
        document.getElementById("TransactionDate").setAttribute("max", today);
    });

    $("#btnImport").click(function () {
        var itemId = $("#ItemId").val();
        startLoader();
        $.ajax(
            {
                url: "/Inventory/SearchItem?ItemId=" + itemId,
                type: "POST"
            }
        ).done(function (result) {
            VendorToWarehouseDetail();
            stopLoader();
        });
    });

</script>




