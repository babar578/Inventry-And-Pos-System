                                    <span class="fas fa-file"></span> Upload
                                </a>
                            </div>

                            <div class="">
                                @using (Html.BeginForm("Items", "Item", FormMethod.Post))
                                {
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="Search" name="Search" placeholder="Search" required>
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary" type="submit" id="btn-search"><span class="fa fa-search"></span></button>
                                        </div>
                                    </div>
                                }
                            </div>*@
                        </div>
                        // }
                    }



                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                <table id="bootstrap-data-table-export" class="table table-hover table-striped text-nowrap">
                    <thead>
                        <tr>
                            @*<th>Code</th>*@
                            <th>Item Name</th>
                            @*<th>Sub-Category</th>*@
                            <th>Category</th>
                            <th>Department</th>
                            <th>Price</th>
                            <th>Tax</th>
                            @*<th>Creation Date</th>*@
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Count() > 0)
                        {
                            foreach (var e in Model)
                            {
                                <tr class="dgrow" data-id="@e.Id">

                                    @*<td>@e.Id</td>*@
                                    <td>@e.Name</td>
                                    @*<td>@e.SubCategoryName</td>*@
                                    <td>@e.CategoryName</td>
                                    <td>@e.DepartmentName</td>
                                    <td>@e.Price</td>
                                    <td>@e.Tax</td>
                                    @*<td>
                                            @{
                                                DateTime date = (DateTime)e.CreationDate;
                                                @date.ToString("dddd, dd-MMMM-yyyy")
                                            }
                                        </td>*@
                                    <td>
                                        <a href="/Menu/Item/" class="btn btn-xs btn-warning btn-edit" data-toggle="tooltip" data-placement="bottom" title="Edit Item" data-caption="Update Item Detail"><span class="fas fa-edit"></span></a>
                                        <a href="/Menu/DeleteItem/" class="btn btn-xs btn-danger btn-delete" data-toggle="tooltip" data-placement="bottom" title="Delete Item"><span class="fas fa-trash"></span></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
