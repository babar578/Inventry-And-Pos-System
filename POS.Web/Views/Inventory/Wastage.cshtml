
@{
    ViewBag.Title = "Wastage";
}

<style>
    .content-header {
        display: none !important;
    }
</style>


<div id="WastageHead"></div>
<div id="WastageDetail"></div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        WastageHead();
        WastageDetail();
    });
    function WastageHead() {
        startLoader();
        $.ajax(
            {
                url: "/Inventory/WastageHead/",
                type: "Get"
            }
        ).done(function (result) {
            $("#WastageHead").html(result);
            stopLoader();
        });
    }

    function WastageDetail() {
        startLoader();
        $.ajax(
            {
                url: "/Inventory/WastageDetail/",
                type: "Get"
            }
        ).done(function (result) {
            $("#WastageDetail").html(result);
            stopLoader();
        });
    }

    function CalculateWQty(itemId) {
        var phyQuantity = parseFloat($(`#PhyQuantity_${itemId}`).val());
        var issQuantity = parseFloat($(`#IssQuantity_${itemId}`).val());

        if (issQuantity > phyQuantity) {
            return alertify.error("Return Quantity Always Less Than And Equal To Physical Quantity");
        }
        var remaining = parseFloat(phyQuantity- issQuantity).toFixed(2);
         
        $(`#RemQuantity_${itemId}`).html(remaining);

        if (itemId == "" || issQuantity == "") {
            return alertify.error("values is empty");
        }
        else {

            var modelData = {
                ItemId : itemId,
                Quantity : issQuantity,
            }

            startLoader();
            $.ajax({
                url: '@Url.Action("UpdateWastage", "Inventory")',
                contentType: 'application/json; charset=utf-8',
                type: "POST",
                data: JSON.stringify(modelData),
                datatype: "Json",
            }).done(function (res) {
                WastageDetail();
                stopLoader();
            });

        }

    }

    function Wastage() {
        var transactionDate = $("#TransactionDate").val();
        var docNo = $("#DocNo").val();
        var locationId = $("#LocationId").val();
        var departmentId = $("#DepartmentId").val();
        var remarks = $("#Remarks").val();

        var itemData = [];

        $("#tblSale tr").each(function () {
            $this = $(this);
            var itemId = $this.find("input.itemId").val();
            var itemName = $this.find("span.itemName").text();
            var quantity = $this.find("input.itemQuantity").val();
            var itemRemarks = $this.find("input.itemRemarks").val();

            if (itemId && quantity) {
                var itemRow = {
                    ItemId: itemId,
                    ItemName: itemName,
                    Quantity: quantity,
                    Remarks: itemRemarks,
                }
                itemData.push(itemRow);
            }
        });

        if (transactionDate == "" || itemData.length == 0) {
            return alertify.error("Please Fill The Required Fields");
        }
        else {
            var modelData = {
                TransactionDate: transactionDate,
                DocNo: docNo,
                LocationId: locationId,
                DepartmentId: departmentId,
                Remarks: remarks,
                WastageDetails: itemData,
            };

            SaveWastage(modelData);
        }


    }

    function SaveWastage(modelData) {
        debugger
        console.log(modelData);
        alertify.confirm("Are you sure you want to save Voucher", function (e, str) {
            if (e) {
         startLoader();
            $.ajax({
                url: '@Url.Action("AddWastage", "Inventory")',
                contentType: 'application/json; charset=utf-8',
                type: "POST",
                data: JSON.stringify(modelData),
                datatype: "Json",
            }).done(function (res) {
                console.log(res);
                if (res == "Error" || res == "") {
                    alertify.error("Something went wrong");
                }
                else if (res == "Success") {
                    window.location.reload();
                    alertify.success("Return To Wastage Saved Successfully");

                    window.location.href = "/Inventory/AllWastageItems";

                }
                stopLoader();
            });
            }
            else
            {
                /* location.reload()*/
            }
        }, "Default Value");
    }

    function RemoveWastage(itemId) {
         startLoader();
            $.ajax({
                url: '@Url.Action("RemoveWastage", "Inventory")',
                type: "POST",
                data: { ItemId: itemId},
            }).done(function (res) {
                WastageDetail();
                stopLoader();
            });
    }
</script>



