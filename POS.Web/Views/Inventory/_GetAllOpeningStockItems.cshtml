
@using POS.Utilities.ViewModel
@model IEnumerable<OpeningStockDetailViewModel>
@{
    ViewBag.Title = "_GetAllOpeningStockItems";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Site.js"></script>
<div class=" row">
    <div class=" col-md-12">
        <div class="card card-custom accent-dark">
            <div class="card-header card-blue">
                <div class="card-title">
                    <span class="card-icon">
                        <i class="flaticon2-line-chart text-primary"></i>
                    </span>
                    <h3 class="card-label">
                        All Opening Stock

                    </h3>
                </div>
                <div class="card-tools">


                    <div class="btn-group float-left" role="group">
                        <div class="">
                            <a href="/Inventory/OpeningStockIndex" id=""
                               class="btn btn-primary waves-effect"
                               data-toggle="tooltip" data-placement="bottom" title="New Category"
                               data-caption="Add New Category">
                                <span class="fas fa-plus"></span> Add New
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>



<div class="row">
    <div class="col-12">
        <div class="card">
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                <table id="bootstrap-data-table-export" class="table table-hover table-striped text-nowrap">
                    <thead>
                        <tr>
                            <th>ItemId</th>
                            <th>Voucher Line No</th>
                            <th>Item Name</th>
                            <th>Quantity</th>
                            <th>Rate</th>
                            <th>Total Rate</th>
                            <th>Line Remarks</th>

                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Count() > 0)
                        {
                            foreach (var e in Model)
                            {
                                <tr class="dgrow" data-id="@e.Id">

                                    <td>@e.ItemId</td>
                                    <td>@e.VoucherLineNo</td>
                                    <td>@e.ItemName</td>
                                    <td>@e.Quantity</td>
                                    <td>@e.Rate</td>
                                    <td>@e.TotalRate</td>
                                    <td>@e.LineRemarks</td>
                                    <td>
                                        @*<a href="/Inventory/WarehouseVoucherSummary/@e.Id" class="btn btn-xs btn-outline-info"><span class="fas fa-eye"></span></a>*@
                                        @*<a href="/Inventory/DeleteWarehouseVoucherRecord/" class="btn btn-xs btn-outline-danger btn-delete" data-toggle="tooltip" data-placement="bottom" title="Delete Purchase Items"><span class="fas fa-trash"></span></a>*@
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>


        </div>
        <!-- /.card -->
    </div>
</div>
