@using POS.Utilities.ViewModel
@model IEnumerable<OrderViewModel>
@{
    ViewBag.Title = "All Order";
    var searchKeyword = ViewBag.search;
}


<script src="~/Scripts/Site.js"></script>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">List of All Orders</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                <table id="bootstrap-data-table-export" class="table table-hover table-striped text-nowrap">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>InvoiceNo</th>
                            <th>Car Number</th>
                            <th>Payment</th>
                            <th>Gross Amount</th>
                            <th>Discount</th>
                            <th>Tip</th>
                            <th>Service Charges</th>
                            <th>GST</th>
                            <th>Receipt Total Cash</th>
                            <th>Receipt Total Credit</th>
                            <th>Change</th>
                            <th>Total Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Count() > 0)
                        {
                            foreach (var e in Model)
                            {
                        <tr class="dgrow" data-id="@e.Id">

                            <td>@e.Id</td>
                            <td>@e.InvoiceNumber</td>
                            <td>@e.CarNo</td>
                            <td>@e.PaymentTypeName</td>
                            <td>@e.GrossAmount</td>
                            <td>@e.DiscountCharged</td>
                            <td>@e.Tip</td>
                            <td>@e.ServiceCharged</td>
                            <td>@e.GstCharged</td>
                            <td>@e.ReceiptTotalCash</td>
                            <td>@e.ReceiptTotalCredit</td>
                            <td>@e.Change</td>
                            <td>@e.TotalNetAmount</td>
                            <td>
                                <a href="javascript:void(0)" onclick="GetInvoice(@e.Id)" class="btn btn-xs btn-info" data-toggle="tooltip" data-placement="bottom"><span class="fas fa-print"></span> Print</a>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
