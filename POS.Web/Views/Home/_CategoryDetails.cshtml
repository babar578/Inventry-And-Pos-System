@using POS.Utilities.ViewModel
@using POS.Utilities.Services
@model List<ItemStockViewModel>
@{
    Layout = null;
    int? currentTableId = null;

    if (Session["CurrentTableId"] != null)
    {
        currentTableId = (int)Session["CurrentTableId"];
    }
}
<link href="~/Content/PosStyle.css" rel="stylesheet" />


<div class="">
    <div class="overflow-auto p-3 mb-3 mb-md-0 mr-md-3 bg-light" style="max-height: 700px;">

        <!-- Small boxes (Stat box) -->
        <div class="row">
            @{
                if (Model?.Count > 0)
                {
                    foreach (var p in Model)
                    {
                        <div class="col-md-4">
                            <a href="javascript:void(0)" onclick='AddItem(@p.ItemId, 1, "@p.Price", "@p.ItemName", "0", "0", @currentTableId)'>
                                <!-- small box -->
                                <div class="small-box btn-success">
                                    <div class="inner" style="text-align:center">
                                        <h6>@p.ItemName</h6>
                                        <h6><small> Liter</small> @p.BalanceQuantity</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <!-- ./col -->
                    }
                }
            }
        </div>
        <!-- /.row -->
    </div>
</div>