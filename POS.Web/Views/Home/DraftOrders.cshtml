@using POS.Utilities.ViewModel
@model IEnumerable<OrderViewModel>
@{
    ViewBag.Title = "Draft Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">List of All Draft Orders</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                <table id="bootstrap-data-table-export" class="table table-hover table-striped text-nowrap">
                    <thead>
                        <tr>
                            <th>Order No</th>
                            <th>InvoiceNo</th>
                            <th>Payment</th>
                            <th>Gross Amount</th>
                            @*<th>GST</th>
                                <th>Tip</th>
                                <th>Service Charges</th>
                                <th>Discount</th>*@
                            <th>Total Amount</th>
                            <th>Order DateTime</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Count() > 0)
                        {
                            foreach (var e in Model)
                            {
                                <tr class="dgrow" data-id="@e.Id">

                                    <td>@e.Id</td>
                                    <td>@e.InvoiceNumber</td>
                                    <td>@e.PaymentTypeName</td>
                                    <td>@e.GrossAmount</td>
                                    @*<td>@e.GstCharged</td>
                                        <td>@e.Tip</td>
                                        <td>@e.ServiceCharged</td>
                                        <td>@e.DiscountCharged</td>*@
                                    <td>@e.TotalNetAmount</td>
                                    <td>
                                        @{
                                            DateTime orderDate = (DateTime)e.ModifyDate;
                                            orderDate.ToString("dd-MMM-yyyy h:mm tt");
                                        }
                                        @orderDate
                                    </td>
                                    <td>
                                        <a href="javascript:void(0)" onclick="Update(@e.Id)" class="btn btn-xs btn-danger" data-toggle="tooltip" data-placement="bottom" title="Edit Order" data-caption="Update Order Detail"><span class="fas fa-edit"></span> <small>Payment</small></a>
                                        @*<a href="javascript:void(0)" onclick="GetPrintToKitchenDepartment(@e.Id)" class="btn btn-xs btn-info" data-toggle="tooltip" data-placement="bottom"><span class="fas fa-print"></span> <small>Kitchen</small> </a>
                                        <a href="javascript:void(0)" onclick="GetPrintToBarDepartment(@e.Id)" class="btn btn-xs btn-info" data-toggle="tooltip" data-placement="bottom"><span class="fas fa-print"></span>  <small>Bar</small></a>
                                        <a href="javascript:void(0)" onclick="GetPrintToDessertDepartment(@e.Id)" class="btn btn-xs btn-info" data-toggle="tooltip" data-placement="bottom"><span class="fas fa-print"></span>  <small>Dessert</small></a>*@
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card -->
    </div>
</div>



<script>
    function Update(orderId) {
        window.location.href = "/Home/POS?OrderId=" + orderId + "&IsUpdateMode= true";
    }
</script>