@using POS.Utilities.ViewModel
@model IEnumerable<CustomerViewModel>
@{
    Layout = null;
}

<script src="~/Scripts/Site.js"></script>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">List of All Open Customers</h3>
                <div class="card-tools">
                    @{

                        <div class="btn-group float-left" role="group">
                            <div class="">
                                <a href="/Vendor/AddCustomer" id="btn-add"
                                   class="btn btn-primary waves-effect"
                                   data-toggle="tooltip" data-placement="bottom" title="New Vendor"
                                   data-caption="Add New Customers">
                                   <span class="fas fa-plus"> Add New Customer</span> 
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                <table id="bootstrap-data-table-export" class="table table-hover table-striped text-nowrap">
                    <thead>
                        <tr>
                            @*<th>Code</th>*@
                            <th>Customer Name</th>
                            <th>Car Number</th>
                            <th>CNIC</th>
                            <th>City Name</th>
                            <th>Mobile</th>
                            <th>Last Reading</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Count() > 0)
                        {
                            foreach (var e in Model)
                            {
                        <tr class="dgrow" data-id="@e.Id">

                            @*<td>@e.Id</td>*@
                            <td>@e.CustomerName</td>
                            <td>@e.CarNumber</td>
                            <td>@e.CNIC</td>
                            <td>@e.CityName</td>
                            <td>@e.Mobile</td>
                            <td>@e.Reading</td>
                            <td>@e.IsActive</td>
                            <td>
                                <a href="/Vendor/AddCustomer/" class="btn btn-xs btn-warning btn-edit" data-toggle="tooltip" data-placement="bottom" title="Edit Vendor" data-caption="Update Vendor Detail"><span class="fas fa-edit"></span></a>
                                <a href="/Vendor/DeleteCustomer/" class="btn btn-xs btn-danger btn-delete" data-toggle="tooltip" data-placement="bottom" title="Delete Vendor"><span class="fas fa-trash"></span></a>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>


        </div>
        <!-- /.card -->
    </div>
</div>



