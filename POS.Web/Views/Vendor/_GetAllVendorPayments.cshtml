@using POS.Utilities.ViewModel
@model IEnumerable<VendorPaymentViewModel>
@{
    Layout = null;
}

<script src="~/Scripts/Site.js"></script>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">List of All Vendor Payments</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                <table id="bootstrap-data-table-export" class="table table-hover table-striped text-nowrap">
                    <thead>
                        <tr>
                            <th>Voucher No</th>
                            <th>Vendor</th>
                            <th>Transaction Date</th>
                            <th>DocNo</th>
                            <th>Type</th>
                            <th>Payment</th>
                            <th>Created By</th>
                            <th>Creation Date</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Count() > 0)
                        {
                            foreach (var e in Model)
                            {
                                <tr class="dgrow" data-id="@e.Id">
                                    <td>@e.Id</td>
                                    <td>@e.VendorName</td>
                                    <td>@e.TransactionDate.ToString("ddd, dd-MMM-yyyy")</td>
                                    <td>@e.DocNo</td>
                                    <td>@e.PaymentTypeName</td>
                                    <td>@Convert.ToDecimal(e.Payment).ToString("#,##0.00")</td>
                                    <td>@e.CreatedByName</td>
                                    <td>
                                        @{
                                            DateTime date = (DateTime)e.CreationDate;
                                            @date.ToString("dd-MMM-yyyy")
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
            <!-- /.card-body -->

        </div>
        <!-- /.card -->
    </div>
</div>



